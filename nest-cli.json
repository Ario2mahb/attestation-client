{
  "monorepo": true,
  "root": "src/servers/verifier-server",
  "sourceRoot": "src/servers/verifier-server/src",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "src/servers/verifier-server/tsconfig.app.json"
  },
  "projects": {
    "verifier-server": {
      "type": "application",
      "root": "src/servers/verifier-server",
      "entryFile": "main",
      "sourceRoot": "src/servers/verifier-server/src",
      "compilerOptions": {
        "tsConfigPath": "src/servers/verifier-server/tsconfig.app.json"
      }
    },
    "web-server": {
      "type": "application",
      "root": "src/servers/web-server",
      "entryFile": "main",
      "sourceRoot": "src/servers/web-server/src",
      "compilerOptions": {
        "tsConfigPath": "src/servers/web-server/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": {
              "classValidatorShim": false,
              "introspectComments": true
            }
          }
        ]        
      }
    },
    "indexer-server": {
      "type": "application",
      "root": "src/servers/indexer-server",
      "entryFile": "main",
      "sourceRoot": "src/servers/indexer-server/src",
      "compilerOptions": {
        "tsConfigPath": "src/servers/indexer-server/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": {
              "classValidatorShim": false,
              "introspectComments": true
            }
          }
        ]        
      }
    },

    "common": {
      "type": "library",
      "root": "src/servers/common",
      "entryFile": "index",
      "sourceRoot": "src/servers/common/src",
      "compilerOptions": {
        "tsConfigPath": "src/servers/common/tsconfig.lib.json"
      }
    }
  }
}